<p id="notice"><%= notice %></p>

<h6 class="subtitle is-6 has-text-centered">Commentaries</h6>

<div class="columns is-mobile is-centered">
  <table>
    <thead>
      <tr>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @commentaries.each do |commentary| %>
        <tr>
          <td><%= commentary.Content %></td>
          <td><%= link_to 'Show', commentary %></td>
          <td><%= link_to 'Edit', edit_commentary_path(commentary) %></td>
          <td><%= link_to 'Destroy', commentary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="columns is-mobile is-centered">
  <%= link_to 'New Commentary', new_commentary_path %>
</div>